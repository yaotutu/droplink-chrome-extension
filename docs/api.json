        "parameters": [],
        "operationId": "postApiAuthSend-code",
        "summary": "发送验证码",
        "description": "向指定邮箱发送验证码。测试模式下验证码固定为 0000。",
        "tags": [
          "认证"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email"
                ],
                "properties": {
                  "email": {
                    "description": "用户邮箱地址",
                    "format": "email",
                    "type": "string"
                  }
                }
              }
            },
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": [
                  "email"
                ],
                "properties": {
                  "email": {
                    "description": "用户邮箱地址",
                    "format": "email",
                    "type": "string"
                  }
                }
              }
            },
            "text/plain": {
              "schema": {
                "type": "object",
                "required": [
                  "email"
                ],
                "properties": {
                  "email": {
                    "description": "用户邮箱地址",
                    "format": "email",
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {}
        }
