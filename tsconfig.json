{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".plasmo/index.d.ts",
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "compilerOptions": {
    "paths": {
      "~*": [
        "./*"
      ],
      "~/shared/*": [
        "./src/shared/*"
      ],
      "~/core/*": [
        "./src/core/*"
      ],
      "~/pages/*": [
        "./src/pages/*"
      ],
      "~/background/*": [
        "./src/background/*"
      ]
    },
    "baseUrl": "."
  }
}
