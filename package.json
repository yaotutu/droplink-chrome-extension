{
  "name": "droplink-chrome-extension",
  "displayName": "Droplink - Cross-Device Link Sharing",
  "version": "0.1.2",
  "description": "Instantly receive links from your phone to your browser. One tap on mobile, auto-open on desktop.",
  "author": "yaotutu",
  "homepage": "https://github.com/yaotutu/droplink",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.90.5",
    "qrcode.react": "^4.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "storage",
      "notifications"
    ],
    "minimum_chrome_version": "116",
    "default_locale": "en"
  },
  "plasmo": {
    "srcDir": "src"
  }
}
